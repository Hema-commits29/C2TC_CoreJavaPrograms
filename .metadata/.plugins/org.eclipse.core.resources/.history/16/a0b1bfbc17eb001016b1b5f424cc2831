package collection;

//import java.util.Collections;
import java.util.LinkedList;
import java.util.ListIterator;


public class LinkedListDemo {

	public static void main(String[] args) {
		LinkedList<Integer> sr = new LinkedList<>();
		sr.add(29);
		sr.add(16);
		sr.addFirst(12);
		sr.add(13);
		sr.add(3, 8);
		sr.addLast(14);
		
		System.out.println("The size of the list is:" +sr.size());
		System.out.println("The element of the index 4 is:" +sr.get(4));
		System.out.println("Last element of the list is:" +sr.element());
		System.out.println("The first element list is:" +sr.element());
		
	    sr.poll();
		
		System.out.println("List after finishing the poll process:" +sr);
		
		ListIterator<Integer> hs = sr.listIterator();
		
		//hs = sr.listIterator();
		while (hs.hasNext()) {
			//int value = hs.next();
		    if (hs.next() == 13) {
		        hs.set(24);
		    }
		    
		    sr.remove(14);
		}
		System.out.println("The final list is:" +sr);

	}

}
