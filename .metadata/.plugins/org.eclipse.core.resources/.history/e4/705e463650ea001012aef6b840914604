package collection;

import java.util.ArrayList;
import java.util.Scanner;

class product {
    int Productid;
    String Productname;
    double price;
	public int id;

    product(int id, String name, double price) {
        this.Productid = id;
		this.Productname = name;
        this.price = price;
    }

    void display() {
        System.out.println(Productid + "  " + Productname + "  â‚¹" + price);
    }
}

public class ArrayListDemo {
